                 <div class="col-sm-12 col-md-4 col-md-offset-2" >  
                    <div id="titreAnnonce">{{ form_label (form.city)}}</div> 
                    <div id="formbox">{{ form_widget (form.city)}}</div> 
                    <div id="formBoxError">{{ form_errors (form.city)}}</div> 
